.chat-side
  .chat-side__header
    .side__header__box
      %p.side__header__box__user-name
        = current_user.name
      %ul.side__header__box__menu
        %li.side__header__box__menu__new-group
        = link_to new_group_path do
          = icon('fa','edit', class: 'icon')
        %li.side__header__box__menu__edit
        = link_to edit_user_path(current_user) do
          = icon('fa', 'cog', class: 'icon')

  .chat-side__groups
    %p.chat-side__groups__name 
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group), class: 'name' do
            .group__name 
              = group.name
        .chat-side__groups__text
          = group.show_last_message
